require_relative "#{Dir.getwd}/etl_step/100_get_raw_responses/helpers/init.rb"

db = ConnectToDB.call('api_responses')

list_of_repo = CreateRepoList.call

source CallGithubApi, list_of_repo, 'repo_meta'

destination SaveRecordToDB, db, 'repos_raw_responses_repo_meta'

post_process do
  results = CountProcessedRecords.call(db, 'repos_raw_responses_repo_meta')
  puts "Total processed records: #{results}."
end
