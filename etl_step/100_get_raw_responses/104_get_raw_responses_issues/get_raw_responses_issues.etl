require_relative "#{Dir.getwd}/etl_step/100_get_raw_responses/helpers/init.rb"

db = ConnectToDB.call('api_responses')

list_of_repo = CreateRepoList.call

source CallGithubApi, list_of_repo, 'issues'

destination SaveRecordToDB, db, 'repos_raw_responses_issues'

post_process do
  results = CountProcessedRecords.call(db, 'repos_raw_responses_issues')
  puts "Total processed records: #{results}."
end
